<section>
  <h4 class="position-absolute top-0 end-0 me-3 mt-2 text-white">Add new Transaction</h4>
  <div class="container-fluid mt-3">
    <%= bootstrap_form_with model: transaction, url: category_transactions_path(@category) do |f| %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, class:"rounded-0", hide_label: true, placeholder: "Transaction Name", required: true %>
      </div>

      <div class="field">
        <%= f.number_field :amount, autofocus: true, class:"rounded-0", hide_label: true, step: "any", placeholder: "$0.00", required: true %>
      </div>

      <div class="actions" style="margin-top: 5em">
        <%= f.submit "Save", class:"btn btn-success rounded-0 w-100 position-absolute bottom-0 start-0" %>
      </div>
    <%end%>
  </div>
</section>
